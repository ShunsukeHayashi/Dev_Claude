{
  "name": "yaml-context-engineering",
  "version": "1.0.0",
  "description": "YAML Context Engineering Agent for hierarchical content extraction",
  "mcp": {
    "server": {
      "command": "python",
      "args": ["-m", "yaml_context_engineering.main"],
      "cwd": "mcp-server",
      "env": {
        "MCP_LOG_LEVEL": "INFO",
        "MCP_OUTPUT_DIRECTORY": "generated_contexts"
      }
    }
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/shunsuke/Dev/Dev_Claude/.claude/hooks/pre-tool-use-bash.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command", 
            "command": "bash /Users/shunsuke/Dev/Dev_Claude/.claude/hooks/pre-tool-use-write.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/shunsuke/Dev/Dev_Claude/.claude/hooks/post-tool-use-file.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash /Users/shunsuke/Dev/Dev_Claude/.claude/hooks/notification-hook.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '[$(date \"+%Y-%m-%d %H:%M:%S\")] Session completed' >> /Users/shunsuke/Dev/Dev_Claude/.claude/logs/session.log"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '[$(date \"+%Y-%m-%d %H:%M:%S\")] Subagent completed: $AGENT_NAME' >> /Users/shunsuke/Dev/Dev_Claude/.claude/logs/subagent.log"
          }
        ]
      }
    ]
  },
  "tools": {
    "enabled": [
      "WebFetch",
      "Read", 
      "Write",
      "Edit",
      "MultiEdit",
      "Bash",
      "Grep",
      "Glob",
      "LS",
      "TodoWrite",
      "WebSearch"
    ]
  },
  "sub_agents": {
    "context-extractor": {
      "file": "agents/context-extractor.md",
      "enabled": true,
      "description": "General hierarchical content extraction"
    },
    "quality-analyzer": {
      "file": "agents/quality-analyzer.md", 
      "enabled": true,
      "description": "Content quality assessment and improvement"
    },
    "api-docs-specialist": {
      "file": "agents/api-docs-specialist.md",
      "enabled": true,
      "description": "API documentation extraction and structuring"
    },
    "tutorial-specialist": {
      "file": "agents/tutorial-specialist.md",
      "enabled": true,
      "description": "Tutorial and guide content processing"
    },
    "knowledge-base-specialist": {
      "file": "agents/knowledge-base-specialist.md",
      "enabled": true,
      "description": "KB articles, FAQs, and troubleshooting guides"
    }
  },
  "slash_commands": {
    "extract-context": {
      "file": "commands/extract-context.md",
      "enabled": true
    },
    "setup-project": {
      "file": "commands/setup-project.md",
      "enabled": true
    },
    "generate-agent": {
      "file": "commands/generate-agent.md",
      "enabled": true
    }
  }
}